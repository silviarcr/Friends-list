<div class="row">
  <div class="col-sm-offset-2 col-sm-10 col-md-4">
    <h3>Adicionar Amigo</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-6">

    {{#if responseMessage}}

    <br/>
    <div class="alert alert-success">
      <h4>Amigo Cadastrado</h4>
      <p>Nome: {{model.name}}</p>
      <p>Sobrenome: {{model.lastname}}</p>
      <p>Amigos desde: {{model.friendsSince}}</p>
      <div class="text-right">
        {{#link-to 'friends.index' class='btn btn-success btn-xs'}}Voltar{{/link-to}}
      </div>
    </div>

    {{else}} 
    
    <form class="form-horizontal" action="get">
      <div class="form-group has-feedback {{if model.isValidName 'has-success'}}">
        <label>Nome*:</label>
        {{input type="text" class="form-control" class="required" placeholder="Mínimo de 4 caracteres" value=model.name autofocus="autofocus"}}
        {{#if model.isValidName}}
        <span class="glyphicon glyphicon-ok form-control-feedback"></span> {{/if}}
      </div>
      <div class="form-group has-feedback {{if model.isValidLastName 'has-success'}}">
        <label>Sobrenome*:</label>
        {{input type="text" class="form-control"class="required" placeholder="Mínimo de 4 caracteres" value=model.lastname autofocus="autofocus"}}
        {{#if model.isValidLastName}}
        <span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
      <div class="form-group">
        <label>Amigos desde:</label>
        {{input type="date" value=model.friendsSince class="form-control" placeholder=""}}
      </div>
      <button class="btn btn-info" {{action 'saveFriend' model}} disabled={{model.isValid}}>Enviar</button>
      <button class="btn btn-success" {{action 'saveFriend' model}} disabled={{model.isNotValid}}>Salvar</button>
    </form>
    {{/if}}

  </div>
</div>