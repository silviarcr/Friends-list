<div class="row">
  <div class="col-md-6">

    {{#if responseMessage}}

    <br/>
    <div class="alert alert-info">
      <h4>Deseja realmente salvar?</h4>
      <div class="text-center">
        <p>Nome: {{model.name}}</p>
        <p>Sobrenome: {{model.lastname}}</p>
        <p>Amigos desde: {{model.friendsSince}}</p>
      </div>
      <div class="row">
        <div class="col-md-6">
          <button class="btn btn-success" {{action 'confirmFriend' model}}>Sim</button>
        </div>
        <div class=" col-md-6 text-right">
          {{#link-to 'friends.index' class="btn btn-danger"}}NÃ£o{{/link-to}}
        </div>
      </div>

    </div>

    {{else}}

    <div class="col-sm-10 col-md-12">
      <h2>Editar dados de Amigo</h2>
    </div>
    <div class="col-sm-10 col-md-12">
      <form class="form-horizontal" action="get">
        <div class="form-group has-feedback {{if model.isValidName 'has-success'}}">
          <label>Nome*:</label>
          {{input type="text" class="form-control" class="required" placeholder="" value=model.name autofocus="autofocus"}}
        </div>
        <div class="form-group has-feedback {{if model.isValidLastName 'has-success'}}">
          <label>Sobrenome*:</label>
          {{input type="text" class="form-control"class="required" placeholder="" value=model.lastname autofocus="autofocus"}}
        </div>
        <div class="form-group">
          <label>Amigos desde:</label>
          {{!-- {{input type="date" value=model.friendsSince class="form-control" placeholder=""}} --}}
          {{bootstrap-datepicker class="form-control" id="date-picker" value=model.friendsSince placeholder=model.friendsSince
           format="dd/mm/yyyy"   orientation="right" autofocus= "autofocus" autoclose=true}}
        </div>
        <button class="btn btn-success" {{action 'saveFriend' model}} disabled={{model.isNotValid}}>Salvar</button>
      </form>
    </div>
    {{/if}}
  </div>
</div>