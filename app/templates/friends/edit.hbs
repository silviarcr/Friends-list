<div class="row">
  <div class="col-sm-offset-2 col-sm-10 col-md-4">
   <h3>Editar dados de Amigo</h3>
</div>
</div>

 <form class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label">Nome</label>
      <div class="col-sm-10 col-md-4">
        {{input type="text" value=model.name class="form-control" required="required" placeholder="Mínimo de 4 caracteres" pattern="{4,}"
        data-rule-minlength="4"}}
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Sobrenome</label>
      <div class="col-sm-10 col-md-4">
        {{input type="text" value=model.lastname class="form-control" required="required" placeholder="Mínimo de 4 caracteres" pattern="{4,}"
        data-rule-minlength="4"}}
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Amigos desde</label>
      <div class="col-sm-10 col-md-4">
        {{input type="date" value=model.friendsSince class="form-control" required="required" placeholder=""}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 col-md-4">
        <button type="submit" class="btn btn-default" {{action 'saveFriend' model}}>Salvar</button>
      </div>
    </div>
  </form>
