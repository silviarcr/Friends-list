<div class="row">
  <div class="col-sm-offset-2 col-sm-10 col-md-4">
   <h3>Editar dados de Amigo</h3>
</div>
</div>

 <form class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label">Nome</label>
      <div class="col-sm-10 col-md-4">
        {{input type="text" class="form-control"  value="" placeholder=model.name}}
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Sobrenome</label>
      <div class="col-sm-10 col-md-4">
        {{input type="text" class="form-control" value="" placeholder=model.lastname}}
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Amigos desde</label>
      <div class="col-sm-10 col-md-4">
        {{input type="text" class="form-control" value="" placeholder= model.friendsSince}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 col-md-4">
        <button type="submit" class="btn btn-default" {{action 'saveFriend' model}}>Salvar Alterações</button>
      </div>
    </div>
  </form>
